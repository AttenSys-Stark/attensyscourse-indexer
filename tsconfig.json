{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node"],
    "noEmit": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": [".", "**/*.ts", "./.apibara/types"],
  "exclude": ["node_modules"]
}
